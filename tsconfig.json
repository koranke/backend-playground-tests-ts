{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "rootDir": ".",
    "moduleResolution": "node",
  },
  "include": ["src/**/*.ts", "tests/**/*.ts", "src/jest.setup.ts", "src/jest.teardown.ts", "config/*.ts", "global.d.ts"],
  "exclude": ["node_modules"]
}